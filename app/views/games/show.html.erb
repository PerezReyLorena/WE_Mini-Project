<p>
  <strong>Partnership:</strong>
  <%= @game.partnership_id %>
</p>

<p>
  <strong>Start:</strong>
  <%= @game.start %>
</p>

<p>
  <strong>End:</strong>
  <%= @game.end %>
</p>
<div>
  <canvas id="chess_board" width="480" height="480">Your browser does not support canvas!</canvas>
</div>
<script type="text/javascript" charset="utf-8">
  var canvas = document.getElementById("chess_board");
  var context = canvas.getContext("2d");
  context.fillStyle = "black";
  for(var i=0; i<4; i++) {
	for(var j=0; j<4; j++) {
      context.fillRect(i*120, j*120, 60, 60);
	}
  }
  for(var i=0; i<4; i++) {
	for(var j=0; j<4; j++) {
      context.fillRect(i*120+60, j*120+60, 60, 60);
	}
  }
  /* Draw the boarder of the board */
  context.moveTo(  0,  0);
  context.lineTo(  0,480);
  context.lineTo(480,480);
  context.lineTo(480,  0);
  context.lineTo(  0,  0);
  context.stroke();
</script>

