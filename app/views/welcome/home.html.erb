<h1><%= image_tag(current_user.image_url) if current_user.image?%> Welcome <%=current_user.username%>!</h1>


<div class="uk-panel uk-panel-box">
  <div class="uk-grid uk-grid-preserve uk-text-center" data-uk-grid-match="{target:'.uk-panel'}">



    <div class="uk-width-large-1-3 uk-width-medium-1-3">
      <div class="uk-panel uk-panel-box uk-panel-box-primary">
        <%= link_to('My current games', users_current_games_path) %>
      </div>
    </div>

    <div class="uk-width-large-1-3 uk-width-medium-1-3">
      <div class="uk-panel uk-panel-box uk-panel-box-primary">
        <%= link_to('Invite a new friend', users_index_path) %>
      </div>
    </div>
    <div class="uk-width-large-1-3 uk-width-medium-1-3">
      <div class="uk-panel uk-panel-box uk-panel-box-primary">
        <%= link_to('My invitations', users_invitations_path)%>
      </div>
    </div>


  </div>
</div>